mixin projects-item(title, img, text, href='#')
  li.projects-item
    img.projects-img(src=`img/photo-${img}.webp` width='290' height='290' alt=title)
    .projects-item-content
      h3.projects-title #{title}
      p.projects-text #{text}
      a.more-details(href=href)
        span.visually-hidden Подробнее

